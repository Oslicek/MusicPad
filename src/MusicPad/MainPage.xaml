<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicPad"
             x:Class="MusicPad.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1a1a2e">

    <Grid Padding="8" RowDefinitions="Auto,*,Auto">
        
        <!-- Header with commit hash and instrument picker -->
        <Grid ColumnDefinitions="Auto,*">
            <Label Text="{x:Static local:BuildInfo.CommitHash}"
                   FontSize="8"
                   TextColor="#CC0000"
                   VerticalOptions="Center"
                   Margin="4,0" />
            
            <Picker x:Name="InstrumentPicker"
                    Grid.Column="1"
                    Title="Select Instrument"
                    TitleColor="#888"
                    TextColor="White"
                    BackgroundColor="#2a2a4e"
                    HorizontalOptions="End"
                    SelectedIndexChanged="OnInstrumentChanged" />
        </Grid>
        
        <!-- Tap Pad -->
        <Frame Grid.Row="1"
               Margin="0,12"
               Padding="0"
               BackgroundColor="#2a2a4e"
               BorderColor="#3a3a6e"
               CornerRadius="16"
               HasShadow="False">
            <Grid x:Name="TapPad" BackgroundColor="Transparent">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPadTapped" />
                </Grid.GestureRecognizers>
                
                <Label x:Name="PadLabel"
                       Text="Tap to Play"
                       FontSize="24"
                       TextColor="#666"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
        </Frame>
        
        <!-- Status Bar -->
        <Label Grid.Row="2"
               x:Name="StatusLabel"
               Text="Loading instruments..."
               FontSize="12"
               TextColor="#888"
               HorizontalOptions="Center"
               Margin="0,4" />
        
    </Grid>

</ContentPage>
