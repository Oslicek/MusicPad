<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicPad"
             x:Class="MusicPad.MainPage"
             BackgroundColor="{StaticResource Gray950}">

    <Grid Padding="4" RowDefinitions="*,Auto">
        
        <!-- Commit hash label -->
        <Label Text="{x:Static local:BuildInfo.CommitHash}"
               FontSize="8"
               TextColor="#666"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="1,1,0,0" />
        
        <!-- Main Content Area -->
        <Frame Grid.Row="0"
               Margin="0,20"
               Padding="20"
               BackgroundColor="{StaticResource Surface}"
               BorderColor="{StaticResource SurfaceBorder}"
               CornerRadius="12">
            <VerticalStackLayout VerticalOptions="Center" Spacing="20">
                <Label Text="Welcome to MusicPad"
                       FontSize="20"
                       HorizontalOptions="Center" />
                <Label Text="A .NET MAUI Music Synthesizer"
                       FontSize="14"
                       TextColor="{StaticResource Gray400}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>
        
        <!-- Status Bar -->
        <Label Grid.Row="1"
               x:Name="StatusLabel"
               Text="Ready"
               FontSize="12"
               TextColor="{StaticResource Gray500}"
               HorizontalOptions="Center" />
        
    </Grid>

</ContentPage>