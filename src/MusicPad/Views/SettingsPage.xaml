<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.SettingsPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Custom Header with Back Button -->
        <Grid x:Name="HeaderBar" 
              Grid.Row="0" 
              ColumnDefinitions="Auto,*" 
              Padding="16,12">
            <Label x:Name="BackArrow"
                   Text="â†"
                   FontSize="24"
                   VerticalOptions="Center"
                   Grid.Column="0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="HeaderLabel"
                   Text="Settings"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   Margin="16,0,0,0"
                   Grid.Column="1" />
        </Grid>
        
        <ScrollView Grid.Row="1" Padding="20,0,20,20">
            <VerticalStackLayout Spacing="24">
            
            <!-- Visual Effects Section -->
            <Frame x:Name="VisualEffectsFrame"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="16">
                    
                    <Label x:Name="VisualEffectsTitle"
                           Text="Visual Effects"
                           FontSize="18"
                           FontAttributes="Bold" />
                    
                    <!-- Piano Key Glow Toggle -->
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label x:Name="PianoGlowLabel"
                               Text="Piano Key Glow"
                               FontSize="16"
                               VerticalOptions="Center"
                               Grid.Column="0"
                               Grid.Row="0" />
                        <Label x:Name="PianoGlowDescription"
                               Text="Keys glow following the sound envelope"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="1" />
                        <Switch x:Name="PianoGlowSwitch"
                                Grid.Column="1"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                VerticalOptions="Center"
                                Toggled="OnPianoGlowToggled" />
                    </Grid>
                    
                    <BoxView x:Name="Divider1"
                             HeightRequest="1" 
                             HorizontalOptions="Fill" />
                    
                    <!-- Pad Glow Toggle -->
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label x:Name="PadGlowLabel"
                               Text="Square Pad Glow"
                               FontSize="16"
                               VerticalOptions="Center"
                               Grid.Column="0"
                               Grid.Row="0" />
                        <Label x:Name="PadGlowDescription"
                               Text="Pads glow following the sound envelope"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="1" />
                        <Switch x:Name="PadGlowSwitch"
                                Grid.Column="1"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                VerticalOptions="Center"
                                Toggled="OnPadGlowToggled" />
                    </Grid>
                    
                </VerticalStackLayout>
            </Frame>
            
            <!-- Color Palette Section -->
            <Frame x:Name="AppearanceFrame"
                   CornerRadius="12"
                   Padding="16">
                <VerticalStackLayout Spacing="16">
                    
                    <Label x:Name="AppearanceTitle"
                           Text="Appearance"
                           FontSize="18"
                           FontAttributes="Bold" />
                    
                    <!-- Color Palette Picker -->
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                        <Label x:Name="PaletteLabel"
                               Text="Color Palette"
                               FontSize="16"
                               VerticalOptions="Center"
                               Grid.Column="0"
                               Grid.Row="0" />
                        <Label x:Name="PaletteDescription"
                               Text="Choose your color theme"
                               FontSize="12"
                               Grid.Column="0"
                               Grid.Row="1" />
                        <Picker x:Name="PalettePicker"
                                Grid.Column="1"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                VerticalOptions="Center"
                                HorizontalOptions="Fill"
                                SelectedIndexChanged="OnPaletteChanged" />
                    </Grid>
                    
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
    </Grid>

</ContentPage>

