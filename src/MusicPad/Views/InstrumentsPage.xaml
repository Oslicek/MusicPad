<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentsPage"
             Shell.NavBarIsVisible="False"
             x:Name="ThisPage">
    
    <Grid RowDefinitions="Auto,*" Padding="0">
        <!-- Custom Header -->
        <Grid x:Name="HeaderBar" 
              Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              Padding="16,12">
            <Label x:Name="BackArrow"
                   Text="â†"
                   FontSize="24"
                   VerticalOptions="Center"
                   Grid.Column="0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="HeaderLabel"
                   Text="Instruments"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   Margin="16,0,0,0"
                   Grid.Column="1" />
            <Button x:Name="ImportButton"
                    Grid.Column="2"
                    Text="+ Import"
                    FontSize="14"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnImportClicked"/>
        </Grid>
        
        <!-- Instruments List -->
        <ScrollView Grid.Row="1" Padding="16,0,16,16">
            <VerticalStackLayout x:Name="InstrumentsList" Spacing="4">
                <!-- User Instruments Section -->
                <Label x:Name="UserSectionLabel"
                       Text="YOUR INSTRUMENTS"
                       FontSize="12"
                       FontAttributes="Bold"
                       Margin="0,8,0,4"
                       IsVisible="False"/>
                <VerticalStackLayout x:Name="UserInstrumentsList" Spacing="4"/>
                
                <!-- Bundled Instruments Section -->
                <Label x:Name="BundledSectionLabel"
                       Text="BUNDLED INSTRUMENTS"
                       FontSize="12"
                       FontAttributes="Bold"
                       Margin="0,16,0,4"/>
                <VerticalStackLayout x:Name="BundledInstrumentsList" Spacing="4"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
