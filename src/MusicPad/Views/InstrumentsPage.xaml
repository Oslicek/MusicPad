<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentsPage"
             Title="Instruments"
             BackgroundColor="#0D0D0E">
    
    <Grid RowDefinitions="Auto,*" Padding="16">
        <!-- Header -->
        <StackLayout Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,16">
            <Label Text="Available Instruments" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#EAEAEC"
                   VerticalOptions="Center"/>
        </StackLayout>
        
        <!-- Instruments List -->
        <CollectionView x:Name="InstrumentsList" 
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnInstrumentSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 8"
                            Stroke="#2A2A2E"
                            BackgroundColor="#1A1A1D"
                            Margin="0,4"
                            Padding="16,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackLayout VerticalOptions="Center">
                                <Label Text="{Binding Name}" 
                                       FontSize="18"
                                       TextColor="#EAEAEC"/>
                                <Label Text="{Binding Credit}" 
                                       FontSize="12"
                                       TextColor="#888"
                                       IsVisible="{Binding HasCredit}"/>
                            </StackLayout>
                            <Label Grid.Column="1" 
                                   Text="â€º" 
                                   FontSize="24" 
                                   TextColor="#666"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

