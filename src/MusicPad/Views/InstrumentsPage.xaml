<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentsPage"
             Title="Instruments"
             BackgroundColor="{StaticResource BackgroundPage}">
    
    <Grid RowDefinitions="Auto,*" Padding="16">
        <!-- Header -->
        <StackLayout Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,16">
            <Label Text="Available Instruments" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center"/>
        </StackLayout>
        
        <!-- Instruments List -->
        <CollectionView x:Name="InstrumentsList" 
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnInstrumentSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 8"
                            Stroke="{StaticResource SurfaceBorder}"
                            BackgroundColor="{StaticResource Surface}"
                            Margin="0,4"
                            Padding="16,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackLayout VerticalOptions="Center">
                                <Label Text="{Binding Name}" 
                                       FontSize="18"
                                       TextColor="{StaticResource TextPrimary}"/>
                                <Label Text="{Binding Credit}" 
                                       FontSize="12"
                                       TextColor="{StaticResource TextSecondary}"
                                       IsVisible="{Binding HasCredit}"/>
                            </StackLayout>
                            <Label Grid.Column="1" 
                                   Text="â€º" 
                                   FontSize="24" 
                                   TextColor="{StaticResource TextDim}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
