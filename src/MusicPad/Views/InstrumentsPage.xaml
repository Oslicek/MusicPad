<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentsPage"
             Shell.NavBarIsVisible="False"
             x:Name="ThisPage">
    
    <Grid RowDefinitions="Auto,*" Padding="0">
        <!-- Custom Header -->
        <Grid x:Name="HeaderBar" 
              Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              Padding="16,12">
            <Label x:Name="BackArrow"
                   Text="â†"
                   FontSize="24"
                   VerticalOptions="Center"
                   Grid.Column="0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="HeaderLabel"
                   Text="Instruments"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   Margin="16,0,0,0"
                   Grid.Column="1" />
            <Button x:Name="ImportButton"
                    Grid.Column="2"
                    Text="+ Import"
                    FontSize="14"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnImportClicked"/>
        </Grid>
        
        <!-- Instruments List - Unified for free reordering -->
        <ScrollView Grid.Row="1" Padding="16,0,16,16">
            <VerticalStackLayout x:Name="InstrumentsList" Spacing="4">
                <!-- Legend -->
                <Grid ColumnDefinitions="Auto,*,Auto,*" Margin="0,4,0,8">
                    <BoxView Grid.Column="0" 
                             BackgroundColor="{StaticResource SecondaryDark}" 
                             WidthRequest="16" HeightRequest="16" 
                             CornerRadius="4"/>
                    <Label Grid.Column="1" 
                           Text="Your instruments" 
                           FontSize="11" 
                           TextColor="{StaticResource TextMuted}"
                           VerticalOptions="Center"
                           Margin="6,0,16,0"/>
                    <BoxView Grid.Column="2" 
                             BackgroundColor="{StaticResource Surface}" 
                             WidthRequest="16" HeightRequest="16" 
                             CornerRadius="4"/>
                    <Label Grid.Column="3" 
                           Text="Bundled" 
                           FontSize="11" 
                           TextColor="{StaticResource TextMuted}"
                           VerticalOptions="Center"
                           Margin="6,0,0,0"/>
                </Grid>
                
                <!-- All instruments (unified list) -->
                <VerticalStackLayout x:Name="AllInstrumentsList" Spacing="4"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
