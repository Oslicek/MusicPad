<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentsPage"
             Title="Instruments"
             BackgroundColor="{StaticResource BackgroundPage}">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="16">
        <!-- Header with Import Button -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,16">
            <Label Text="Instruments" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimary}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1"
                    Text="+ Import"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="{StaticResource TextDark}"
                    FontSize="14"
                    CornerRadius="8"
                    Padding="12,8"
                    Clicked="OnImportClicked"/>
        </Grid>
        
        <!-- Instruments List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="InstrumentsList" Spacing="4">
                <!-- User Instruments Section -->
                <Label x:Name="UserSectionLabel"
                       Text="YOUR INSTRUMENTS"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextMuted}"
                       Margin="0,8,0,4"
                       IsVisible="False"/>
                <VerticalStackLayout x:Name="UserInstrumentsList" Spacing="4"/>
                
                <!-- Bundled Instruments Section -->
                <Label x:Name="BundledSectionLabel"
                       Text="BUNDLED INSTRUMENTS"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextMuted}"
                       Margin="0,16,0,4"/>
                <VerticalStackLayout x:Name="BundledInstrumentsList" Spacing="4"/>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Back Button -->
        <Button Grid.Row="2"
                Text="Back"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource TextWhite}"
                FontSize="16"
                CornerRadius="8"
                HeightRequest="50"
                Margin="0,16,0,0"
                Clicked="OnBackClicked"/>
    </Grid>
</ContentPage>
