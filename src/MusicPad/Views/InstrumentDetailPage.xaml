<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentDetailPage"
             Title="Instrument Details"
             BackgroundColor="#0D0D0E">
    
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <!-- Instrument Name -->
            <Label x:Name="InstrumentNameLabel" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="#EAEAEC"
                   HorizontalTextAlignment="Center"/>
            
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="True"
                               IsVisible="True"
                               Color="#4A90D9"
                               HeightRequest="50"/>
            
            <!-- Content Container -->
            <StackLayout x:Name="ContentContainer" IsVisible="False" Spacing="16">
                
                <!-- Credits Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="8">
                        <Label Text="Credits" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"
                               Margin="0,0,0,4"/>
                        
                        <StackLayout Spacing="6">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Sound Engineer:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="SoundEngineerLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Created:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="CreationDateLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Editor:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="EditorLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>
                
                <!-- Technical Info Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="8">
                        <Label Text="Technical Information" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"
                               Margin="0,0,0,4"/>
                        
                        <StackLayout Spacing="6">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Internal Name:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="InternalNameLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Source:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="SourceFileLabel" 
                                       FontSize="14" TextColor="#EAEAEC"
                                       LineBreakMode="TailTruncation"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Soundfont:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="SoundfontVersionLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Key Range:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="KeyRangeLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Regions:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="RegionCountLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>
                
                <!-- Conversion Info Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="8">
                        <Label Text="Conversion Info" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"
                               Margin="0,0,0,4"/>
                        
                        <StackLayout Spacing="6">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Converter:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="ConverterLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Converted:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="ConversionDateLabel" 
                                       FontSize="14" TextColor="#EAEAEC"/>
                            </StackLayout>
                            
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Copyright:" 
                                       FontSize="14" TextColor="#888" WidthRequest="120"/>
                                <Label x:Name="CopyrightLabel" 
                                       FontSize="14" TextColor="#EAEAEC"
                                       LineBreakMode="WordWrap"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Border>
                
                <!-- Select Button -->
                <Button x:Name="SelectButton"
                        Text="Select Instrument"
                        BackgroundColor="#4A90D9"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="50"
                        Margin="0,10"
                        Clicked="OnSelectClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
