<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPad.Views.InstrumentDetailPage"
             Title="Instrument Details"
             BackgroundColor="#0D0D0E">
    
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <!-- Instrument Name -->
            <Label x:Name="InstrumentNameLabel" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="#EAEAEC"
                   HorizontalTextAlignment="Center"/>
            
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="True"
                               IsVisible="True"
                               Color="#4A90D9"
                               HeightRequest="50"/>
            
            <!-- Content Container -->
            <StackLayout x:Name="ContentContainer" IsVisible="False" Spacing="16">
                
                <!-- Credits Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="12">
                        <Label Text="Credits" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="8" ColumnSpacing="12">
                            <!-- Sound Engineer -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="Sound Engineer:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="SoundEngineerLabel" 
                                   Grid.Row="0" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Creation Date -->
                            <Label Grid.Row="1" Grid.Column="0" 
                                   Text="Created:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="CreationDateLabel" 
                                   Grid.Row="1" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Editor -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Text="Editor:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="EditorLabel" 
                                   Grid.Row="2" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                        </Grid>
                    </StackLayout>
                </Border>
                
                <!-- Technical Info Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="12">
                        <Label Text="Technical Information" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="8" ColumnSpacing="12">
                            <!-- Internal Name -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="Internal Name:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="InternalNameLabel" 
                                   Grid.Row="0" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Source File -->
                            <Label Grid.Row="1" Grid.Column="0" 
                                   Text="Source:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="SourceFileLabel" 
                                   Grid.Row="1" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"
                                   LineBreakMode="TailTruncation"/>
                            
                            <!-- Soundfont Version -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Text="Soundfont:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="SoundfontVersionLabel" 
                                   Grid.Row="2" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Key Range -->
                            <Label Grid.Row="3" Grid.Column="0" 
                                   Text="Key Range:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="KeyRangeLabel" 
                                   Grid.Row="3" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Region Count -->
                            <Label Grid.Row="4" Grid.Column="0" 
                                   Text="Regions:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="RegionCountLabel" 
                                   Grid.Row="4" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                        </Grid>
                    </StackLayout>
                </Border>
                
                <!-- Conversion Info Section -->
                <Border StrokeShape="RoundRectangle 12"
                        Stroke="#2A2A2E"
                        BackgroundColor="#1A1A1D"
                        Padding="16">
                    <StackLayout Spacing="12">
                        <Label Text="Conversion Info" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#4A90D9"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="8" ColumnSpacing="12">
                            <!-- Converter -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Text="Converter:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="ConverterLabel" 
                                   Grid.Row="0" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Conversion Date -->
                            <Label Grid.Row="1" Grid.Column="0" 
                                   Text="Converted:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="ConversionDateLabel" 
                                   Grid.Row="1" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"/>
                            
                            <!-- Copyright -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Text="Copyright:" 
                                   FontSize="14" TextColor="#888"/>
                            <Label x:Name="CopyrightLabel" 
                                   Grid.Row="2" Grid.Column="1" 
                                   FontSize="14" TextColor="#EAEAEC"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </StackLayout>
                </Border>
                
                <!-- Select Button -->
                <Button x:Name="SelectButton"
                        Text="Select This Instrument"
                        BackgroundColor="#4A90D9"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="50"
                        Margin="0,10"
                        Clicked="OnSelectClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>

